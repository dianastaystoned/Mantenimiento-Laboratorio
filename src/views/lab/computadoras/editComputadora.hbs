      <div class="box col-md-4 mx-auto">
        <div class="right-side">
            <form action="/lab/editcompu/{{comp.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="codigo" placeholder="Código" value="{{comp.codigo}}" class="form-control" required autofocus>
                </div>
